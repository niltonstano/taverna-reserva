{
  "name": "crudfastify-mongodb-backend",
  "version": "1.0.0",
  "description": "CRUD Profissional com Fastify, TypeScript e MongoDB - Cobertura 100%",
  "type": "module",
  "main": "dist/server.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "rm -rf dist && tsc -p tsconfig.json",
    "start": "node dist/src/server.js",
    "start:prod": "NODE_ENV=production node dist/src/server.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src",
    "db:seed": "tsx src/scripts/seed-master.ts",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch --runInBand",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --runInBand",
    "test:admin": "npm run test -- tests/controllers/admin.controller.test.ts",
    "test:services": "npm run test -- 'tests/services/**/*.test.ts'",
    "test:e2e": "npm run test -- 'tests/e2e/**/*.test.ts'"
  },
  "dependencies": {
    "@fastify/compress": "^8.0.1",
    "@fastify/cors": "^10.1.0",
    "@fastify/helmet": "^13.0.0",
    "@fastify/jwt": "^9.1.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.4.0",
    "@fastify/swagger-ui": "^5.1.0",
    "bcryptjs": "^3.0.0",
    "dotenv": "^16.4.7",
    "fastify": "^5.1.1",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^4.0.2",
    "mongoose": "^8.9.0",
    "nanoid": "^5.0.9",
    "pino": "^9.14.0",
    "winston": "^3.17.0",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.2",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
